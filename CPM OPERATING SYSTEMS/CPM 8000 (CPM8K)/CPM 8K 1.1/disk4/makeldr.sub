;;;;;;Build cpmldr.sys;;;;;;asz8k -o lbiosasm.o lbiosasm.8knzcc -c -M1 -Dloader bios.cld8k -o ldrbios.rel -r lbiosasm.o bios.o;make relocatable versionld8k -o cpmldr.rel -r ldrbios.rel ldrbdos.rel;make a stripped version thats smallerld8k -s -o cpmldrs.sys cpmldr.rel -lcpmera bootldr.aar8k qv bootldr.a ldrbios.rel ldrbdos.rel ar8k qv bootldr.a lbiosasm.o bios.o;Use the stripped version as its much smaller.pip c:cpmldr.sys[g0]=cpmldrs.sysuser 0putboot cpmldr.sys a:;;;;;;;;; THE END ;;;;;;;;;;ND ;;;;;;;;;;