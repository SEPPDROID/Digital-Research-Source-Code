
                           /* MP/M-86 2.0 Character Control Block */
  declare ccb$structure lit 'structure (
    attach word,
    queue word,
    flag byte,
    startcol byte,
    column byte,
    nchar byte,
    mimic byte,
    msource byte,
    type byte,
    xdev byte)';

  declare
    cf$listcp         lit        '001h',        /* control P toggle */
    cf$compc          lit        '002h';        /* suppress output  */

